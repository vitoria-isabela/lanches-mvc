@model Snack

<div class="container">
    <div class="row">
        <div class="card">
            <div class="text-right">
                <img src="@Model.ImageUrl" class="img-fluid" alt="" />
            </div>
            <div class="card-block">
                <h2 class="card-title">@Model.Name</h2>
                <p class="card-text">@Model.DetailedDescription</p>
                <p class="btn btn-group align-content-lg-end">
                    <a asp-controller="Snack" asp-action="List" class="btn btn-outline-secondary">See all snacks</a>

                    <a asp-controller="ShoppingCart" asp-action="AddItemToCart" asp-route-snackId="@Model.SnackId"
                    class="btn btn-secondary" id="cardButton">Add to cart.</a>
                </p>
            </div>
        </div>
    </div>
</div>