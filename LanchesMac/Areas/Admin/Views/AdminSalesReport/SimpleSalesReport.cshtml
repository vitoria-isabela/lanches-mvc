@model IEnumerable<LanchesMac.Models.Order>

<h2>Period orders</h2>

<nav class="navbar navbar-dark">
    <div class="container-fluid">
        <form class="navbar-form navbar-left">
            <div class="form-group">
                <div class="form-group">
                    <label for="minDate">Initial date</label>
                    <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />
                </div>
                <div class="form-group">
                    <label for="maxDate">Final date</label>
                    <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
                </div>
            </div>
            <button type="submit" class="btn btn-success">Filter</button>
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Number of orders = @Model.Count()</h3>
        <h3 class="panel-title">Number of snacks in orders = @Model.Sum(obj => obj.OrderItemsTotal).ToString()</h3>
        <h3 class="panel-title">Total orders value = @Model.Sum(obj => obj.TotalOrder).ToString("c")</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.OrderId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalOrder)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderItemsTotal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderDelivered)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalOrder)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderItemsTotal)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderDelivered)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>