<br />
<h4><strong>Manage Images</strong></h4>
<br />
<table border="0" width="100%">
    <tr class="row">
        <td class="col-md-6">
            <form method="post" enctype="multipart/form-data" asp-controller="AdminImages" asp-action="UploadFiles">
                <i class="fa-solid fa-cloud-arrow-up fa-3x"></i>
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <p><b>Select one or more files to upload :</b></p>
                        <p>(Files with the same name will be replaced)</p>
                        <input type="file" name="files" multiple class="button btn-outline-primary" />
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Upload file(s)" class="button btn-outline-primary" />
                    </div>
                </div>
            </form>
        </td>
        <td class="col-md-6">
            <form method="post" enctype="multipart/form-data" asp-controller="AdminImages" asp-action="GetImages">
                <i class="fa-solid fa-eye fa-3x"></i>
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <p><strong>See images in server folder :</strong></p>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="See files in server" class="button btn-outline-warning" />
                    </div>
                </div>
            </form>
        </td>
    </tr>
</table>
<div class="container">
    @if (ViewData["Deleted"] != null)
    {
        <li>@ViewData["Deleted"]</li>
    }
</div>

